<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener</title>
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background: #f8fafc;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        min-height: 100vh;
      }

      .container {
        max-width: 800px;
        width: 100%;
        margin-top: 40px;
        background: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
      }

      h1 {
        text-align: center;
        margin-bottom: 20px;
        color: #1e293b;
      }

      form {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-bottom: 25px;
      }

      form input {
        flex: 1;
        padding: 10px;
        border: 1px solid #cbd5e1;
        border-radius: 8px;
        font-size: 14px;
      }

      form button {
        padding: 10px 18px;
        background: #2563eb;
        border: none;
        border-radius: 8px;
        color: white;
        font-weight: bold;
        cursor: pointer;
        transition: background 0.2s ease-in-out;
      }

      form button:hover {
        background: #1d4ed8;
      }

      .generated {
        text-align: center;
        margin-bottom: 20px;
        padding: 10px;
        background: #e0f2fe;
        border: 1px solid #bae6fd;
        border-radius: 8px;
      }

      .generated a {
        color: #2563eb;
        font-weight: bold;
        text-decoration: none;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }

      th,
      td {
        padding: 12px;
        border: 1px solid #e2e8f0;
        text-align: center;
        font-size: 14px;
      }

      th {
        background: #f1f5f9;
        color: #475569;
      }

      tr:nth-child(even) {
        background: #f9fafb;
      }

      tr:hover {
        background: #f1f5f9;
      }

      .no-data {
        text-align: center;
        color: #64748b;
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>ðŸ”— URL Shortener</h1>

      <% if (locals.id) { %>
      <div class="generated">
        <p>
          URL Generated:
          <a href="http://localhost:8001/url/<%= id %>" target="_blank">
            http://localhost:8001/url/<%= id %>
          </a>
        </p>
      </div>
      <% } %>

      <form method="POST" action="/url">
        <input type="text" name="url" placeholder="Enter your URL e.g. https://example.com" required />
        <button type="submit">Generate</button>
      </form>

      <% if (locals.urls && urls.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>S. No</th>
            <th>Short ID</th>
            <th>Redirect URL</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% urls.forEach((url, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td>
              <a href="https://short-url-1ki4.onrender.com/url/<%= url.shortId %>" target="_blank">
                <%= url.shortId %>
              </a>
            </td>
            <td>
              <a href="<%= url.redirectURL %>" target="_blank">
                <%= url.redirectURL %>
              </a>
            </td>
            <td><%= url.visitHistory.length %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } else { %>
      <p class="no-data">No URLs shortened yet. Try adding one above!</p>
      <% } %>
    </div>
  </body>
</html>
